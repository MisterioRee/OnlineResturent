<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineResturent.Views.Authentication.Registration.RegisterationSucessPage"
             NavigationPage.HasNavigationBar="False"
             Padding="10"
             BackgroundColor="{StaticResource secondryColorBlack}">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="https://i.ibb.co/YTrv39L/fireworks.png"  Aspect="AspectFit" />

            <Label Text="Congratulation!" TextColor="{StaticResource primeryColorOrange}" FontSize="Large"  HorizontalOptions="CenterAndExpand" />
            <Label Text="Your account has" TextColor="{StaticResource secondryColorLight}" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
            <Label Text="been created" TextColor="{StaticResource secondryColorLight}" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>
        </StackLayout>

        <StackLayout VerticalOptions="Center"  Margin="0,20,0,0">
            <Button Text="DONE" Style="{StaticResource primeryOrangeButton}" Clicked="Button_Clicked" FontFamily="{StaticResource Normal}" Padding="50,0,50,0"/>
        </StackLayout>

    </StackLayout>

</ContentPage>