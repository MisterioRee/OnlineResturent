<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineResturent.Views.AppCore.Cart.EmptyCartPage"
             NavigationPage.HasNavigationBar="False"
             Padding="10"
             BackgroundColor="{StaticResource primeryColorWhite}">

    <StackLayout>
        <StackLayout Padding="10" Margin="30,30,0,0">
            <Label Text="Empty Cart" FontSize="32" FontFamily="{StaticResource Normal}" TextColor="Black"/>
        </StackLayout>

        <StackLayout>
            <Image Source="https://i.ibb.co/BjSsMq8/asd.png" WidthRequest="300" HeightRequest="300" Aspect="AspectFit" />
        </StackLayout>

        <StackLayout  HorizontalOptions="CenterAndExpand" Margin="20">
            <Label Text="Look That you havent made your choice yet..."/>
        </StackLayout>

        <Button Text="Brouse Menu" Style="{StaticResource primeryBlackButton}" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>